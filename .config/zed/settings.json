// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "features": {
    "edit_prediction_provider": "none"
  },
  "show_edit_predictions": false,
  "ui_font_size": 16,
  "buffer_font_size": 14,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Zed Legacy:  Andromeda"
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "telemetry": {
      "diagnostics": false,
      "metrics": false
  },
  "assistant": {
    "version": "2",
    "enabled": false,
    "button": false
  },
  "chat_panel": {
    "dock": "left",
    "button": "never"
  },
  "collaboration_panel": {
    "button": false
  },
  "buffer_font_family": "Adwaita Mono",
  "format_on_save": "off",
  "languages": {
    "Rust": {
      "format_on_save": "language_server"
    },
    "Python": {
      "format_on_save": "language_server"
    }
  },
  "file_types": {
    "HTML": ["*.html.tera"],
    "Fish": ["*.fish.in"],
    "Shell Script": ["*.bash.in", "*.zsh.in"]
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        },
        "cargo": {
          "features": "all",
          "targetDir": true
        },
        "imports": {
          "group": {
            "enable": false
          },
          "granularity": {
            "group": "module"
          }
        }
      }
    }
  },
  "git": {
    "inline_blame": {
      "enabled": true
    }
  },
  "terminal": {
    "detect_venv": "off"
  },
  "notification_panel": {
    "button": false
  }
}
